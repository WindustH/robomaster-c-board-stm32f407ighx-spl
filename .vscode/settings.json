{
    "files.exclude": {
        "build": true,
        ".cache": true,
        "inc/core": true,
        // "inc/stm32f4xx_conf.h": true,
        "STM32F407.svd": true,
        "STM32F407IGHX_FLASH.ld": true,
        "toolchain-arm-none-eabi.cmake": true,
        ".clangd": true,
        ".gitignore": true,
        // "CMakeLists.txt": true,
        "dev.py": true,
        "startup": true,
        "startup-mdkarm": true,
        "keil-convertor": true,
        "core": true,
        "lib": true,
        ".claude": true,
        "hal-template": true,
        "keil-ver": true,
        "debug-panel": true,
        "chat-history": true,
        "archive.py": true
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "editor.formatOnSave": true,
    "VsCodeTaskButtons.tasks": [
        {
            "label": "$(pass-filled) Build (Release)",
            "task": "build-release",
        },
        {
            "label": "$(debug-console) Build (Debug)",
            "task": "build-debug",
        },
        {
            "label": "$(cloud-download) Flash",
            "task": "flash",
        }
    ]
}