{
    // --- General Settings ---
    "files.associations": {
        "*.h": "c",
        "*.s": "arm"
    },
    // --- C/C++ IntelliSense Settings ---
    // The CMake Tools extension will provide the IntelliSense configuration.
    // This setting tells the C/C++ extension to use it.
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    // Add compiler arguments for IntelliSense to suppress specific warnings
    // --- CMake Tools Configuration ---
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureOnOpen": true,
    // --- Debugger Settings (Cortex-Debug) ---
    // This tells the Cortex-Debug extension where to find the ARM toolchain.
    "cortex-debug.armToolchainPath": "/usr/bin", // Adjust if your toolchain is elsewhere
    "cortex-debug.openocdPath": "openocd", // Assumes 'openocd' is in your system's PATH
    // --- Editor & Formatting ---
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    }
}